@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Category Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @item.Name
                        <span class="float-end me-4">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-success">
                                <i class="bi bi-pencil"></i>
                            </a>
                            &nbsp;
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>