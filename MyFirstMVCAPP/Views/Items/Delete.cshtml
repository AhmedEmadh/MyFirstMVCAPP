@model Item
@{
    ViewData["Title"] = "Delete Item";
}

<form method="post" asp-action="delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">Back to items</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

