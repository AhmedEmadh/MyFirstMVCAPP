@model Item
@{
    ViewData["Title"] = "New";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Item</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-control form-select">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <br />
            <button type="submit" class="btn btn-primary" style="width:150px">save</button>
            <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">Back to items</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

